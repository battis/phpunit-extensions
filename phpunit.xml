<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="tests/bootstrap.php" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd" cacheDirectory=".phpunit.cache">
  <coverage>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </coverage>
  <testsuites>
    <testsuite name="Battis\PHPUnit\Sessions">
      <directory>tests</directory>
    </testsuite>
  </testsuites>
  <extensions>
    <extension class="Battis\PHPUnit\Sessions\Extension"/>
  </extensions>
</phpunit>
